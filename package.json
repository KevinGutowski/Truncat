{
  "name": "truncat",
  "description": "A Sketch plugin to truncate text.",
  "version": "1.0.0",
  "engines": {
    "sketch": ">=49.0"
  },
  "skpm": {
    "name": "truncat",
    "manifest": "src/manifest.json",
    "main": "truncat.sketchplugin",
    "assets": [
      "assets/**/*"
    ],
    "sketch-assets-file": "sketch-assets/icons.sketch"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.7.0"
  },
  "author": "Kevin Gutowski <kskiviolin@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/KevinGutowski/Truncat"
  }
}
